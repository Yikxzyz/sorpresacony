    <script>
        // ===== INTERACCI√ìN DEL TULIP√ÅN =====
        let clicks = 0;
        const tulipan = document.getElementById('tulipan');
        const introMessage = document.getElementById('intro-message');
        const petals = document.querySelectorAll('.petalo');
        const introScreen = document.getElementById('intro-screen');
        const mainContent = document.getElementById('main-content');

        // Mostrar primer mensaje despu√©s de 1 segundo
        setTimeout(() => {
            introMessage.style.opacity = 1;
        }, 1000);

        tulipan.addEventListener('click', () => {
            clicks++;
            
            // Mensajes que aparecen con cada clic
            const messages = [
                "¬øLista para tu sorpresa?",
                "¬°Un poquito m√°s!",
                "¬°Aqu√≠ vamos mi amor!"
            ];
            
            if (clicks <= 3) {
                introMessage.textContent = messages[clicks - 1];
                
                // Animar p√©talos para que se abran
                petals.forEach(petal => {
                    petal.style.clipPath = `ellipse(${25 + clicks * 15}% ${40 + clicks * 15}% at 50% 50%)`;
                    const currentRot = parseInt(petal.style.transform.match(/\d+/)[0]);
                    petal.style.transform = `rotate(${currentRot - 15}deg)`;
                });
                
                // Al tercer clic: ¬°transici√≥n a la p√°gina principal!
                if (clicks === 3) {
                    setTimeout(() => {
                        introScreen.style.opacity = 0;
                        setTimeout(() => {
                            introScreen.style.display = 'none';
                            mainContent.style.display = 'flex';
                            setTimeout(() => mainContent.style.opacity = 1, 100);
                            
                            // Efecto de tel√≥n dorado
                            const curtain = document.createElement('div');
                            curtain.style.position = 'fixed';
                            curtain.style.top = '0';
                            curtain.style.left = '0';
                            curtain.style.width = '100%';
                            curtain.style.height = '100%';
                            curtain.style.background = 'linear-gradient(45deg, #ffd700, #f9d423)';
                            curtain.style.zIndex = '999';
                            curtain.style.opacity = '1';
                            curtain.style.animation = 'fadeOut 2s forwards';
                            document.body.appendChild(curtain);
                            
                            setTimeout(() => curtain.remove(), 2000);
                        }, 1500);
                    }, 1000);
                }
            }
        });

        // ===== P√ÅGINA PRINCIPAL =====
        // Contador de tiempo juntos
        const startDate = new Date('2023-08-25');
        function updateCounter() {
            const now = new Date();
            const diff = now - startDate;
            const years = Math.floor(diff / (1000 * 60 * 60 * 24 * 365));
            const months = Math.floor((diff % (1000 * 60 * 60 * 24 * 365)) / (1000 * 60 * 60 * 24 * 30));
            const days = Math.floor((diff % (1000 * 60 * 60 * 24 * 30)) / (1000 * 60 * 60 * 24));
            
            document.getElementById('counter').innerHTML = `
                üíñ ${years} a√±o, ${months} meses y ${days} d√≠as juntos üíñ
            `;
        }
        setInterval(updateCounter, 1000);
        updateCounter();

        // Corazones flotantes
        function createHearts() {
            const heart = document.createElement('div');
            heart.innerHTML = ['‚ù§Ô∏è', 'üß°', 'üíõ', 'üíö', 'üíô', 'üíú'][Math.floor(Math.random() * 6)];
            heart.className = 'heart';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.top = Math.random() * 100 + 'vh';
            heart.style.fontSize = Math.random() * 30 + 20 + 'px';
            heart.style.animationDuration = Math.random() * 4 + 3 + 's';
            document.body.appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 6000);
        }
        setInterval(createHearts, 300);

        // Mensajes rom√°nticos con efecto de m√°quina de escribir
        const messages = [
            "Gracias apestochita por todo lo hermoso que me haz hecho pasar en este a√±o y ocho meses juntos, espero sean muchisimos mas juntos, Te amo demaciado miamorcito, Teamooooooo<3.",
            "Gracias por tanto miamorcito no tienes idea de lo feliz que me haces y lo feliz que te quiero hacer por toda la vida.",
            "Eres y seras el amor de mi vida, y espero poder entablar la familia que tanto queremos algun dia, TEAMO MI APESTOCHITA."
        ];
        let currentMessage = 0;
        
        function typeWriter(text, i, element) {
            if (i < text.length) {
                element.textContent += text.charAt(i);
                i++;
                setTimeout(() => typeWriter(text, i, element), 20);
            }
        }
        
        function changeMessage() {
            const messageElement = document.getElementById('message');
            messageElement.textContent = '';
            currentMessage = (currentMessage + 1) % messages.length;
            typeWriter(messages[currentMessage], 0, messageElement);
        }
        
        // Iniciar primer mensaje al cargar la p√°gina principal
        setTimeout(() => {
            if (mainContent.style.opacity === '1') {
                typeWriter(messages[0], 0, document.getElementById('message'));
            }
        }, 2100);

        // Mensaje secreto con confeti
        function showSecretMessage() {
            document.getElementById('secret-message').style.display = 'block';
            for (let i = 0; i < 150; i++) {
                createConfetti();
            }
        }
        
        function hideSecretMessage() {
            document.getElementById('secret-message').style.display = 'none';
        }
        
        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.className = 'confetti';
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.backgroundColor = `hsl(${Math.random() * 360}, 100%, 50%)`;
            confetti.style.animationDuration = Math.random() * 3 + 2 + 's';
            document.body.appendChild(confetti);
            
            setTimeout(() => {
                confetti.remove();
            }, 5000);
        }
    </script>
